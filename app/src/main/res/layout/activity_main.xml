<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gold"
    tools:context="com.example.vinothramss.companysimple_app.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:layout_width="354dp"
        android:layout_height="201dp"
        app:srcCompat="@drawable/rayquazamega"
        android:id="@+id/imageView" />

    <TextView
        android:text="@string/nintendo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/cname"
        android:textStyle="normal|bold"
        android:textSize="60sp"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:text="@string/email_id"
        android:layout_width="339dp"
        android:layout_height="37dp"
        android:id="@+id/email"
        android:textSize="30sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="@string/address_uk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addr"
        android:textSize="30sp"
        android:textStyle="normal|bold" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:text="@string/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ph"
        android:textSize="30sp"
        android:textStyle="normal|bold" />
    <TextView
        android:text="7654321"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/no"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:autoLink="phone"/>

    </LinearLayout>
</LinearLayout>
